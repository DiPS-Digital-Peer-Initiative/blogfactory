<% if @posts.empty? %>
<%= render "nopostsindex" %>
<% else %>
<div class="posts-index-section">
  <h1>Spotlight</h1>
  <%= render "spotlightpost", post: @spotlightpost, imagepath: url_for(@spotlightpost.header_image) %>
</div>

<% if !@recentposts.empty? %>
  <div class="posts-index-section">
    <h1>Recent</h1>
    <div class="recent-posts-grid">
    <% @recentposts.each do |post| %>
      <%= render "recentpost", post: post, imagepath: url_for(post.header_image) %>
    <% end %>
    </div>
  </div>
<% end %>

<% if !@otherposts.empty? %>
  <h1>More from <%= @blogname %></h1>
  <div class="post-list-grid">
    <% @otherposts.each do |post| %>
        <%= render "postlistitem", post: post, imagepath: url_for(post.header_image) %>
    <% end %>
  </div>
<% end %>

<% end %>


